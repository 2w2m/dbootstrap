@import '../well';
@import 'Button';

.bootstrap fieldset {
    @extend .bootstrap .well;
}

// TextBox
.bootstrap .dijitTextBox {
    display: inline-block;
    font-size: $baseFontSize;
    color: $gray;
    border-radius: $inputBorderRadius;
    background-color: $inputBackground;
    border: 1px solid $inputBorder;
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    transition: border linear .2s, box-shadow linear .2s;
}

.bootstrap .dijitTextBoxFocused {
    border-color: rgba(82,168,236,.8);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6);
}

.bootstrap .dijitInputField {
    padding: 6px 6px;
}

.bootstrap .dijitPlaceHolder {
    font-style: normal;
}

.bootstrap .dijitTextBoxDisabled {
    background-image: none;
    box-shadow: none;
    background-color: $inputDisabledBackground;
}

// TextArea
.bootstrap .dijitTextArea {
    padding: 4px 6px;
    line-height: 1.5;
    box-sizing: border-box;
}

// ComboBox
.bootstrap .dijitComboBox .dijitButtonNode {
    text-align: center;
    vertical-align: middle;
    cursor: pointer;
    buttonBackground($btnBackground, $btnBackgroundHighlight, $grayDark, 0 1px 1px rgba(255,255,255,.75));
    border: 1px solid $btnBorder;
    border-bottom-color: darken($btnBorder, 10%);
    border-radius: 4px;
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.2), 0 1px 2px rgba(0,0,0,0.05);
}

.bootstrap .dijitComboBox .dijitButtonNode.dijitArrowButton {
    @extend .bootstrap .dijitComboButton .dijitArrowButton;
    padding: 6px 0px;
}

.bootstrap .dijitComboBoxDisabled .dijitButtonNode {
    background-image: none;
    background-color: $inputDisabledBackground;
    opacity: 0.65;
    cursor: not-allowed;
    box-shadow: none;
}
