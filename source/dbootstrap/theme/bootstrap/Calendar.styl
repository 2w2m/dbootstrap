.bootstrap .dijitPopup .dijitCalendar {
    margin-top: 2px;
    box-shadow: 0 5px 10px rgba(0,0,0,.2);
}

.bootstrap .dijitCalendar {
    color: $textColor;
    background-color: $white;
    border-collapse: separate;
    border-radius: 4px;
    border: 1px solid rgba(0,0,0,0.2);
    text-align: center;
    padding: 1px;
}

.bootstrap .dijitCalendarDayLabelTemplate,
.bootstrap .dijitCalendarDateTemplate {
    line-height: $baseLineHeight;
    padding: 5px 8px;
    border-left: 1px solid $tableBorder;
    border-bottom: 1px solid $tableBorder;
}

.bootstrap .dijitCalendarDayLabelTemplate {
    background-color: $white;
    color: #808080;
    border-left: none;
    border-right: none;
    border-top: 1px solid $tableBorder;
}

.bootstrap .dijitCalendarDateLabel {
    vertical-align: middle;
}

.bootstrap .dijitCalendarPreviousMonth,
.bootstrap .dijitCalendarNextMonth {
    color: lighten($textColor, 80%);
}

.bootstrap .dijitCalendarSelectedDate {
    background-color: #0074CC;
    color: $white;
}

.bootstrap .dijitCalendarCurrentDate,
.bootstrap .dijitCalendarCurrentMonthLabel,
.bootstrap .dijitCalendarSelectedYear {
    font-weight: bold;
}

.bootstrap .dijitCalendar tr td:first-child {
    border-left: none;
}

.bootstrap .dijitCalendarMonthContainer,
.bootstrap .dijitCalendarYearContainer {
    background-color: #F7F7F7;
    font-size: 0.9em;
}

.bootstrap .dijitCalendarYearLabel {
    padding: 8px;
}

.bootstrap .dijitCalendar .dijitDropDownButton .dijitButtonNode {
    background-image: none;
    border: none;
    box-shadow: none;
    background-color: transparent;
    padding: 3px;
}

.bootstrap .dijitCalendarIncrementControl:before {
    @extend .dijitIcon:before;
}

.bootstrap .dijitCalendarIncrease:before {
    @extend .icon-arrow-right:before;
}

.bootstrap .dijitCalendarDecrease:before {
    @extend .icon-arrow-left:before;
}

.bootstrap .dijitA11ySideArrow {
    display: none;
}

.bootstrap .dijitCalendarMonthMenu .dijitCalendarMonthLabel {
    @extend .bootstrap .dijitMenuItem;
    padding-top: 6px;
    padding-bottom: 6px;
}

.bootstrap .dijitCalendarMonthMenu .dijitCalendarMonthLabelHover {
    @extend .bootstrap .dijitMenuItemHover;
}

