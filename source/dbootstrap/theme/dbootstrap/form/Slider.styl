// General
.bootstrap .dijitSlider {
    color: $grayLight;
}

.bootstrap .dijitSliderRemainingBar {
    border: none;
    background-image: linear-gradient(center top, #f5f5f5, #f9f9f9);
    box-shadow: inset 2px 1px 2px rgba(0,0,0,.1);
}

.bootstrap .dijitSliderProgressBar {
    border: none;
    background-color: #149dbf;
    background-image: linear-gradient(center top, #149bdf, #0480be);
    box-shadow: inset 0 -1px 0 rgba(0,0,0,.15);
}

.bootstrap .dijitSliderImageHandle {
    border: 1px solid rgba(0, 0, 0, 0.15);
    background-color: $white;
}

.bootstrap .dijitRuleMark {
    border-color: $grayLight;
}

// Horizontal
.bootstrap .dijitSliderBarH {
    height: 1em;
}

.bootstrap .dijitSliderImageHandleH {
    box-shadow: 1px 0 2px rgba(0, 0, 0, 0.15);
    width: 11px;
    height: 1.5em;
}

.bootstrap .dijitSliderBumperH {
    @extend .bootstrap .dijitSliderRemainingBar;
    height: 1em;
}

.bootstrap .dijitSliderBumperH.dijitSliderRightBumper {
    border-bottom-right-radius: 4px;
    border-top-right-radius: 4px;
    margin-left: -4px; // To hide box shadow
    padding-right: (@margin-left * -1);
}

.bootstrap .dijitSliderBumperH.dijitSliderLeftBumper {
    @extend .bootstrap .dijitSliderProgressBar;
    border-bottom-left-radius: 4px;
    border-top-left-radius: 4px;
}

.bootstrap .dijitRuleLabelsContainerH {
    padding-bottom: 5px;
}

// Vertical
.bootstrap .dijitSliderBarV {
    width: 1em;
}

.bootstrap .dijitSliderV .dijitSliderRemainingBar {
    border: none;
    background-image: linear-gradient(center top, #f5f5f5, #f9f9f9);
    box-shadow: inset 2px -2px 2px rgba(0,0,0,.1);
}

.bootstrap .dijitSliderV .dijitSliderProgressBar {
    border: none;
    background-image: linear-gradient(left center, #149bdf, #0480be);
    box-shadow: inset -1px 0 0 rgba(0,0,0,.15);
}

.bootstrap .dijitSliderImageHandleV {
    box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.15);
    width: 1.5em;
    height: 11px;
}

.bootstrap .dijitSliderBumperV {
    @extend .bootstrap .dijitSliderV .dijitSliderRemainingBar;
    width: 1em;
}

.bootstrap .dijitSliderBumperV.dijitSliderTopBumper {
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin-bottom: -4px; // To hide box shadow
    padding-top: (@margin-bottom * -1);
}

.bootstrap .dijitSliderBumperV.dijitSliderBottomBumper {
    @extend .bootstrap .dijitSliderV .dijitSliderProgressBar;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
}

.bootstrap .dijitRuleLabelsContainerV {
    margin: 0 5px;
}

// Disabled
.bootstrap .dijitSliderDisabled {
    opacity: 0.65;
}
