// Dialogs
.dbootstrap .dijitDialog {
    background-color: $white;
    border: 1px solid rgba(0,0,0,0.3);
    border-radius: $baseBorderRadius * 1.5;
    box-shadow: 0 3px 7px rgba(0,0,0,0.3);
}

.dbootstrap .dijitDialogCloseIcon .closeText {
    float: right;
    font-size: 20px;
    font-weight: bold;
    color: $black;
    text-shadow: 0 1px 0 rgba(255,255,255,1);
    opacity: 0.2;
    display: inline;
    position: relative;
    margin-top: 2px;
}

.dbootstrap .dijitDialogCloseIconHover .closeText {
    opacity: 0.4;
}

.dbootstrap .dijitDialogUnderlay {
    background-color: $black;
    opacity: 0.8;
}

.dbootstrap .dijitDialogTitleBar {
    padding: 9px 15px;
    border-bottom: 1px solid #eee;
}

.dbootstrap .dijitDialogTitle {
    font-size: 24px;
    font-weight: bold;
    margin: 0;
}

.dbootstrap .dijitDialogPaneContentArea {
    padding: 15px;
}

.dbootstrap .dijitDialogPaneActionBar {
    padding: 14px 15px 15px;
    margin-bottom: 0;
    text-align: right;
    background-color: $backgroundColor;
    border-top: 1px solid $borderColor;
    border-radius: 0 0 $baseBorderRadius * 1.5 $baseBorderRadius * 1.5;
    box-shadow: inset 0 1px 0 $white;
}

// Tooltips
.dbootstrap .dijitTooltipContainer {
    background-color: $tooltipBackground;
    border: 1px solid $tooltipArrowOuterColor;
    border-radius: $baseBorderRadius * 1.5;
    box-shadow: 0 5px 10px rgba(0,0,0,.2);
    padding: 9px 14px;
}

.dbootstrap .dijitTooltipConnector,
.dbootstrap .dijitTooltipConnector:after {
    position: absolute;
    width: 0;
    height: 0;
    display: inline-block;
    border-color: transparent;
    border-style: solid;
}

.dbootstrap .dijitTooltipConnector {
}

.dbootstrap .dijitTooltipConnector:after {
    content: "";
    z-index: -1;
}

// Above
.dbootstrap .dijitTooltipAbove {
    padding-bottom: $tooltipArrowWidth;
}

.dbootstrap .dijitTooltipAbove .dijitTooltipConnector {
    bottom: 1px;
    border-width: $tooltipArrowWidth $tooltipArrowWidth 0;
    border-top-color: $tooltipArrowColor;
    &:after {
        border-width: $tooltipArrowOuterWidth $tooltipArrowOuterWidth 0;
        border-top-color: $tooltipArrowOuterColor;
        left: -($tooltipArrowOuterWidth);
        bottom: -1px;
    }
}

// Below
.dbootstrap .dijitTooltipBelow {
    padding-top: $tooltipArrowWidth;
}

.dbootstrap .dijitTooltipBelow .dijitTooltipConnector {
    top: 1px;
    border-width: 0 $tooltipArrowWidth $tooltipArrowWidth;
    border-bottom-color: $tooltipArrowColor;
    &:after {
        border-width: 0 $tooltipArrowOuterWidth $tooltipArrowOuterWidth;
        border-bottom-color: $tooltipArrowOuterColor;
        left: -($tooltipArrowOuterWidth);
        top: -1px;
    }
}

// Left
.dbootstrap .dijitTooltipLeft {
    padding-right: $tooltipArrowWidth;
}

.dbootstrap .dijitTooltipLeft .dijitTooltipConnector {
    right: 1px;
    border-width: $tooltipArrowWidth 0 $tooltipArrowWidth $tooltipArrowWidth;
    border-left-color: $tooltipArrowColor;
    &:after {
        border-width: $tooltipArrowOuterWidth 0 $tooltipArrowOuterWidth $tooltipArrowOuterWidth;
        border-left-color: $tooltipArrowOuterColor;
        bottom: -($tooltipArrowOuterWidth);
        right: -1px;
    }
}

// Right
.dbootstrap .dijitTooltipRight {
    padding-left: $tooltipArrowWidth;
}

.dbootstrap .dijitTooltipRight .dijitTooltipConnector {
    left: 1px;
    border-width: $tooltipArrowWidth $tooltipArrowWidth $tooltipArrowWidth 0;
    border-right-color: $tooltipArrowColor;
    &:after {
        border-width: $tooltipArrowOuterWidth $tooltipArrowOuterWidth $tooltipArrowOuterWidth 0;
        border-right-color: $tooltipArrowOuterColor;
        bottom: -($tooltipArrowOuterWidth);
        left: -1px;
    }
}

// Special
.dbootstrap .dijitTooltipABLeft .dijitTooltipConnector {
    left: 20px;
}

.dbootstrap .dijitTooltipABRight .dijitTooltipConnector {
    right: 20px;
}
